# Database
DATABASE_URL="postgresql://username:password@localhost:5432/koshflow?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here-change-this-in-production"
JWT_REFRESH_SECRET="your-refresh-token-secret-key-here"
JWT_EXPIRES_IN="7d"
ACCESS_TOKEN_EXPIRES_IN="15m"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV="development"
API_BASE_URL="http://localhost:3001/api"

# CORS Configuration
CORS_ORIGIN="http://localhost:5173"
CORS_ORIGINS="http://localhost:5173,http://localhost:3000,https://yourdomain.com"

# Security Configuration
MAX_REQUEST_SIZE=10485760
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOG_LEVEL="info"

# Redis Configuration (Optional - for advanced rate limiting and caching)
REDIS_URL="redis://localhost:6379"

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_SECURE=false

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH="./uploads"

# Security Headers
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true

# Monitoring and Logging
ENABLE_REQUEST_LOGGING=true
ENABLE_SECURITY_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# API Documentation
ENABLE_SWAGGER=true
SWAGGER_PATH="/api-docs"

# Admin Configuration
ADMIN_IP_WHITELIST=""
ADMIN_EMAIL="admin@koshflow.com"

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
